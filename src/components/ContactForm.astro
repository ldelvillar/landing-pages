<div class="relative bg-[#F3F3F3] mx-5 lg:flex lg:flex-row rounded-[45px]">
    <form class="flex flex-col gap-4 py-6 lg:w-[55%]">
        <div class="flex flex-col mx-7">
            <label for="name">Name *</label>
            <input
                type="text"
                id="name"
                name="name"
                placeholder="Name"
                required
                class="h-14 py-4 px-5 border border-black rounded-[14px]"
            >
        </div>
        <div class="flex flex-col mx-7">
            <label for="email">Email *</label>
            <input
                type="email"
                id="email"
                name="email"
                placeholder="Email"
                required
                class="h-14 py-4 px-5 border border-black rounded-[14px]"
            >
        </div>
        <div class="flex flex-col mx-7">
            <label for="email">Message *</label>
            <textarea
                id="message"
                name="message"
                placeholder="Your message here..."
                required
                class="h-20 py-4 px-5 border border-black rounded-[14px]"
            ></textarea>
        </div>
        <button type="submit" class="bg-[#191A23] text-white text-xl h-16 w-[90%] mx-auto mt-7 rounded-[14px]">
            Send message
        </button>
    </form>
    <div class="absolute right-0 hidden lg:block">
        <img src="/images/contactIllustration.webp" alt="illustration" class="h-96 w-auto select-none pointer-events-none">
    </div>
</div>